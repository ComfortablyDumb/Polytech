nom = input("Quel est votre nom?: ")
prénom = input("Quelle est votre prénom")
sport = input("Quel sport pratiquez vous ?")
FC = int(input("Quel est votre FC?"))
print("Entrainement de {} {}".formmat(prenom,nom))

if sport ==  "aucun":
    if FC>70:
        print("Va falloir vous y mettre")
    else:
        print("bon coeur,entrainement inutile")
else:
    if sport == "collectif":
        print("Ne dépassez pas {} FC".format(1.5*FC)
    elif sport == "combat":
        print("Ne dépassez pas {} FC".format(2*FC)
    elif sport == "endurance":
              print("Ne dépassez pas {} FC".format(1.2*FC)

              


